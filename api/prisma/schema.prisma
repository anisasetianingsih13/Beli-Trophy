generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Satuan {
  pcs
  set
  seri
}

model tb_produk {
  id        Int      @id @default(autoincrement())
  kode      String   @unique @db.VarChar(10)
  nama      String   @db.VarChar(100)
  harga     Int
  satuan    Satuan?  @default(pcs) // Tambahkan default di sini
  foto_url  String?  @db.Text      // Gunakan Text jika URL sangat panjang
  deskripsi String?  @db.Text      // Gunakan Text untuk deskripsi panjang
  createdAt DateTime @default(now()) // Tambahkan ini untuk tracking
}
